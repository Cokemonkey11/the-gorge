package Players
    public class Players
        static player  array players
        static bool array playing
        static int     array tradeExp
        static player        localPlayer
        static player        playerPassive
        static int       playerCount = 0

        static function isWest(int id) returns bool
        	return (id >= 2 and id <= 6)
        end

        static function isEast(int id) returns bool
        	return (id >= 7 and id <= 11)
        end
    end
